<!--pages/leader/step-2/step-2.wxml-->
<import src="/template/template.wxml"/>

 <template is="create_head" data='{{item}}' />

<view class='line'> </view>
<view class="title">
<text>方案环节选取：</text>
<text>*最多可选三项</text></view>

<view class="index-hd">
  <button class="mini-button" wx:for="{{link}}"  id="{{index}}" bindtap='show' type="primary"  size="mini" plain="true">{{item}}
  </button>

</view>
<view class='line'></view>

<view class="index-dd">
  <text>方案环节</text>
  <text>*选中删除</text>
</view>

<view class="index-td">
  <button class="mini-button1"  wx:for="{{link_choose}}" id="{{index}}" bindtap="remove" type="primary"  size="mini" plain="true"> {{item}}</button>
 </view>
<view class='line'></view>
 

<view class="style_choose">方案风格选取：</view>
<view class="style">
<button class="mini-button" bindtap="showa"  type="primary" size="mini"   plain="{{type1}}"> 家庭 </button>
<button class="mini-button" bindtap="showb"  type="primary"   size="mini" plain="{{type2}}"> 同学 </button>
<button class="mini-button" bindtap="showc"  type="primary"   size="mini" plain="{{type3}}"> 情侣 </button>
<button class="mini-button" bindtap="showd"  type="primary"  size="mini"  plain="{{type4}}"> 同事 </button>
<button class="mini-button" bindtap="showe"  type="primary"  size="mini"  plain="{{type5}}"> 商务 </button>
<button class="mini-button" bindtap="showf"  type="primary"  size="mini"  plain="{{type6}}"> 温馨 </button>
</view>
<view class='line'></view>
 
<view class="next-step" >
<button  bindtap="next" type="primary" > 下一步 </button></view>