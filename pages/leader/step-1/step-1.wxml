<!--pages/leader/step-1/step-1.wxml-->

<view class="name1">
<text class='title' >方案名称：</text>
<input type='text' bindinput='forcontent' class='textarea' name='name' placeholder='我的Yuker方案' value='{{name}}' maxlength='15'></input>
</view>
<view class='line'></view>

<view class='location'>
<text class='title_location' >当前定位：</text>
<image class='image' bindtap='chooseLocation' src='/images/location.png'></image>
</view>
<view class='location_choose'>
 <block wx:if="{{hasLocation === false}}">
          <text class="noneaddress">未选择位置</text>
        </block>
        <block wx:if="{{hasLocation === true}}">
          <text class="address">{{locationAddress}}</text>
        </block>
</view>   
<view class='line'> </view>





<view class="where_go">

  <text class='title_where' >出行范围：</text>

  <view class="food_title">
    <view class="food_label_left" bindtap="show_food_list">商圈 ∨</view>
    <view class="food_label_right">{{info_food}}</view>
  </view>
  <view class="food_list">
    <picker-view
        indicator-style="height: 30px;"
        style="width: 100%; height: 250px;"
        value="{{value}}"
        bindchange="bindChange">
      <picker-view-column>
        <view wx:for="{{where_go_array}}" style="line-height: 30px">{{item}}</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{where_go_area}}" style="line-height: 30px">{{item}}</view>
      </picker-view-column>
    </picker-view> 

  </view>

</view>
<view class='line'></view>



<view class="next-step" >
<button  bindtap="next" type="primary" > 下一步 </button></view>
