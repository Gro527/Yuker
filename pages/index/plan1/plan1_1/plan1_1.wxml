<view class="swiper-tab"> 
    <view wx:for="{{result}}"  wx:for-index="index_plan" class="swiper-tab-list {{currentTab==index_plan ? 'on' : ''}}" data-current="{{index_plan}}" bindtap="swichNav">方案{{index_plan+1}}</view> 
</view> 
  
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange"> 
  <swiper-item wx:for="{{result}}" wx:for-index="index_plan"> 
    <scroll-view scroll-y='true'> 
        <block wx:for="{{result[currentTab]}}" wx:for-item="plan" wx:for-index="index">
          <view class='little'>
           <view class='little0'>
            <image class='preview' src='{{plan.preview[0]}}'>
            </image>
            <view class='little2'>
              <view class="first0">{{plan.link}} : {{plan.label}}</view>
              <view class = "loc">{{plan.dest}}</view>
            </view>
           </view>
          </view>

          <view class='little1' bindtap='daohang' data-dest='{{plan.dest}}'>
             <image class='image' src='/images/daohang.png'></image>
             <view class = "loc1">{{plan.dest_position[0]}}</view>
          </view>
          <view class="line"></view>
        </block>
      <!-- </view> -->
      <view class="bz">备注：</view>
      <input type='text' bindinput='forcontent' class='textarea' name='name' placeholder='输入备注' value='{{name}}' maxlength='15'></input> 
      <view class='line'></view> 
      <button class='final' type="default" plain="true" bindtap="final">方案发布</button> 
    </scroll-view> 

  </swiper-item> 

</swiper> 