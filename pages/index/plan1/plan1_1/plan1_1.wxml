<view class="swiper-tab"> 
    <view wx:for="{{result}}"  wx:for-index="index_plan" class="swiper-tab-list {{currentTab==index_plan ? 'on' : ''}}" data-current="{{index_plan}}" bindtap="swichNav">方案{{index_plan}}</view> 
</view> 
  
 
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange"> 

  <swiper-item wx:for="{{result}}"> 
    <scroll-view scroll-y='true'> 
      <!-- <view class="plan_item" style='flex-direction:row;' > -->
        <block wx:for="{{result[currentTab]}}" wx:for-item="plan" wx:for-index="index">

          <view class='little1'>
            <view class='little2'>
              <view>{{plan.link}}</view>
              <view class= "first">{{plan.label}}</view>
              <view class="second">
                <image class="image" src='../../../../images/item3.png'></image>
                <text>{{plan.dest}}</text>
              </view>
            </view>  
            <view class='little3'>
              <image bindtap='daohang' class='image' src='/images/daohang.png'></image> 
            </view>  
          </view>
            <view class="line"></view>

        </block>
      <!-- </view> -->
      
    <view class="bz">备注：</view>
    <input type='text' bindinput='forcontent' class='textarea' name='name' placeholder='输入备注' value='{{name}}' maxlength='15'></input> 
    <view class='line'></view> 
    <button class='final' type="default" plain="true">方案发布</button> 
    </scroll-view> 

  </swiper-item> 

</swiper> 