

  <view class="bg">
    
      <view class="head_name">
        <view class='text0'>{{program_info.program_name}}</view>
      </view>
    
  </view>

<!--此处为最后方案的标签-->


<view>
    <block wx:for='{{program_info.release_result}}' wx:for-item='step' class='plan_item'>
     
        <view class='little'>
           <view class='little0'>
            <image class='preview' src='{{step.preview[0]}}'>
            </image>
            <view class='little2'>
              <view class="first0">{{step.link}} : {{step.label}}</view>
              <view class = "loc">{{step.dest}}</view>
            </view>
           </view>
          </view>

          <view class='little1'  bindtap='daohang'  data-dest='{{step.dest}}'>
             <image class='image' src='/images/daohang.png'></image>
             <view class = "loc1">{{step.dest_position[0]}} </view>
          </view>
            <view class="line"></view>
    </block>  

    <block>
      <button open-type='share'>分享给成员们</button>
      <view hidden='{{comment_show}}'>
        <view wx:if='{{!comment_finished}}'>
          <text>已完成行程？您可以</text>
          <button bindtap='showCommentArea'>查看/发表评论</button>
        </view>
        <view wx:else>
          <button bindtap='showCommentArea'>查看/修改评论</button>  
        </view>
      </view>
      <view class='comment' hidden='{{!comment_show}}'>
        <view wx:for='{{comment_list}}' wx:for-item='cur_comment'>
        <text>{{cur_comment.nickname}}:</text>
        <text>{{cur_comment.stars}}星, </text>
        <text>{{cur_comment.comment}}</text>
        </view>
        <textarea class='commentText' placeholder='这个方案如何呢，快写下您的高见吧……' auto-focus='true' bindinput='confirmComment'></textarea>
        <button bindtap='submitComment'>确认{{comment_finished?"修改":"发表"}}</button>
      </view>

    </block>
</view>
