<!--pages/index/plan1/plan1.wxml-->
<!-- <view class="content"> -->
<import src='/template/progress_bar.wxml'/>
  <view class="bg">
    
      <view class="head_name">
        <text>{{name}}</text>
      </view>
      <view class="head_time">
        <text>{{time}}</text>
      </view>
    
  </view>
<!-- </view> -->

<block wx:for="{{members}}"  wx:for-item="user"  wx:for-index="i">
  <view class="person" style='height:{{display_height[i]}}rpx;display: flex;flex-direction:row;'>
    <view class='little'>
      <view wx:if="{{user.avatar}}">
        <image class='head' src='{{user.avatar}}'></image>
        <view class = 'info'><text class='name'>{{user.nickname?user.nickname:"匿名用户"}}</text></view>
        
      </view>
      <view wx:else>
        <image class='head' src='/images/project-1.png'></image>
        <view class = 'info'><text class='name'>{{user.nickname?user.nickname:"匿名用户"}}</text></view>
        <!-- <text class='name'>{{user.nickname?user.nickname:"匿名用户"}}</text> -->
      </view>

      <!--text>{{user.nickname}}</text-->
    </view>
    <view class='little_2'>
      <text wx:for="{{user.sub}}" wx:for-item="link">
      {{link.link}} : {{link.sub}}
      </text>
    </view>
  </view>
  <view class='loc'>
      <image class='location_p' src='/images/location.png'></image>
      <text class='location'>{{user.location.location}}</text>
  </view>
  <view class='line'></view>
</block>


<block wx:if="{{member_type==0}}">
 <button wx-if="{{!submit_state}}" bindtap='submit' type="default" class='final'>生成结果</button>
 <button wx-if="{{submit_state}}" bindtap='check' type="default" class='final'>查看结果</button>
</block>

<block wx:elif="{{member_type==1}}">
 <view class='remark' wx-if="{{!submit_state}}">正在等待其他成员加入...</view>
 <view class='remark' wx-if="{{submit_state}}">发起人正在选择方案，请稍候...</view>
</block>

<block wx:elif="{{member_type==2}}">

 <block wx:if="{{submit_state==0}}">
  <button  open-type='getUserInfo' bindgetuserinfo='join' type="default" class='final'>加入方案</button>
 </block>

 <block wx:elif="{{submit_state==1}}" >
  <button type="default" class='final_lighter'>已结束</button>
 </block>

</block>
<button wx:if="{{!submit_state}}" open-type='share' type='default' class='final'>邀请好友</button>


<view class="mask" data-statu="close" wx:if="{{showProgressStatus}}"></view>
<view animation="{{animationData}}" class="ProgressBox" wx:if="{{showProgressStatus}}">
  <view>
  <text>数据量较大，请耐心等待...</text>
  <text wx:if='{{showCountDown}}'>{{countDownNum}}s</text>
  </view>
  <template is='progress_bar' data='{{...item}}'></template>
  <view class='countdown' style='align-text:center;width:100%'>
  </view>
</view>
