<view class="content">
  <view class="menu" style="position:fixed; top:0;width: 750rpx;" >
    <view class="{{currentTab==0?'select':'default'}}" data-current="0" bindtap='switchNav'>我发起的方案</view>
    <view class="{{currentTab==1?'select':'default'}}" data-current="1" bindtap='switchNav'>我参与的方案</view>
  </view>

  <view class="hr"></view>
<block wx:for="{{show}}">
      <view class="item">
        <view class="nameInfo" data-program='{{item}}' bindtap='plan1'>
          <view class="name" >
            <view class="fname">{{item.name}}</view>
            <view class="time">{{item.time}}</view>
            <view wx-if="{{item.release_state==1}}" class="status">已发布</view>
            <view wx-if="{{item.release_state==0}}" class="status">未发布</view>
          </view>
          <text class="count"  >></text>
        </view>
      </view>
      <view class="line"></view>
  </block>
  <view class="bt"></view>
  








</view>