<view class="content">
  <view class="menu">
    <view class="{{currentTab==0?'select':'default'}}" data-current="0" bindtap='switchNav'>我发起的方案</view>
    <view class="{{currentTab==1?'select':'default'}}" data-current="1" bindtap='switchNav'>我参与的方案</view>
  </view>

  <view class="hr"></view>
<block wx:for="{{show}}">
      <view class="item">
        <view class="nameInfo">
          <view class="name">
            <view class="fname">{{item.name}}</view>
            <view class="time">{{item.time}}</view>
            <view wx-if="{{item.status==1}}" class="status">已完成</view>
            <view wx-if="{{item.status==0}}" class="status">未完成</view>
          </view>
          <button class="count" data-program_id='{{item.id}}' bindtap='plan1' ><image class="next" src="/images/next.png"></image></button>
        </view>
      </view>
      <view class="line"></view>
  </block>
  <view class="bt"></view>








</view>